</head>
<body>
    <header>
        <nav id="divMenu" class="navbar navbar-default navbar-static-top" role="navigation">
            <div id="divHeader" class="container">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand"><img src="~/Images/Logo.png" alt="Project-M" class="img-responsive" /></a>
                    <button type="button" data-toggle="collapse" data-target="#divCollapsibleMenu" class="navbar-toggle">
                        <span class="glyphicon glyphicon-menu-down"></span>
                    </button>
                </div>
                <div id="divCollapsibleMenu" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav @ViewBag.HomeTabClass"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav @ViewBag.ProductTabClass"><a asp-controller="Product" asp-action="Index">Products</a></li>
                        <li class="nav"><a href="#">Contact us</a></li>
                    </ul>
                    <form id="frmSearch" class="navbar-form " role="search">
                        <div class="input-group">
                            <div class="form-group">
                                <input id="txtSearch" type="text" class="form-control" placeholder="Search" />
                            </div>
                            <div class="input-group-btn">
                                <button id="btnSearch" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </nav>
    </header>


    <section id="divBody" class="container">

        <div class="row">

            <div id="divSideBar" class="col-sm-2">
                <div id="divSideBarAdmin"></div>
                <div id="divSideBarNormal">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.HomeTabClass" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @ViewBag.ProductTabClass" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact us</a>
                        </li>

                    </ul>
                </div>
            </div>

            <div id="divBodyInner" class="col-sm-10">
                @RenderBody()
            </div>
        </div>
    </section>

    <div id="divFooter" class="container">
        <hr />
        <footer>
            &copy;ProjectM - @DateTime.Now.Year
        </footer>
    </div>
